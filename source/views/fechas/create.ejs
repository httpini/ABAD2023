<!DOCTYPE html>
<html lang="en">
    <%- include("../includes/head.ejs")  %> 

<body>
    <%- include("../includes/header.ejs") %>
    <main>
        <form action="/fechas/torneo/<%=torneo.id%>/create" method="post">
            <h3>Crear Nueva Fecha del <%= torneo.name %> <%= torneo.temporada %></h3>

            <label for="torneo_id">Torneo id:</label>
            <input type="text" name="torneo_id" id="torneo_id" value="<%=torneo.id%>" readonly >

            <label for="nro">Fecha Numero</label>
            <input type="number" id="nro" name="nro"
            value="<%= locals.oldData ? oldData.nro: null %>">
            <% if (locals.errors && errors.nro) { %>
                <p class="msg-error"><%= errors.nro.msg %></p>
            <% } %> 

            <label for="name">Nombre</label>
            <input type="text" id="name" name="name"
            value="<%= locals.oldData ? oldData.name: null %>">
            <% if (locals.errors && errors.name) { %>
                <p class="msg-error"><%= errors.name.msg %></p>
            <% } %> 

            <label for="dia">Dia de juego</label>
            <input type="date" name="dia" id="dia">
            
            
            <fieldset id="partidos"></fieldset>
           


            <button onclick="agregar_partido()" type="button" >Agregar Partido <i class="fa-solid fa-plus"></i></button>

            <button type="submit">Crear Fecha</button>


        </form>
        <script src="/scripts/formDinamicoFechas.js"></script>
    </main>
    

</body>
</html>